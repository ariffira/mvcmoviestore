<div class="container">
    <form action="/movie/update" method="POST">
        <input type="hidden" value="{{movie._id}}" name="id">
        <div class="modal-body">
        <div class="form-group">
            <label for="inputMovie">Movie Title</label>
            <input type="text" value="{{movie.title}}" name="title" class="form-control" id="inputMovie" placeholder="e.g Terminator">
        </div>
        <div class="form-group">
            <label for="inputAuthor">Author</label>
            <input type="text" value="{{movie.author}}" name="author" class="form-control" placeholder="e.g Ariful">
        </div>
        <div class="form-group">
            <label for="inputDirector">Director</label>
            <input type="text" value="{{movie.director}}" name="director" class="form-control" placeholder="e.g James Cameron">
        </div>
        <div class="form-group">
            <label for="inputBudget">Budget</label>
            <input type="number" value="{{movie.budget}}" name="budget" class="form-control" id="inputBudget" placeholder="e.g 5 millions">
        </div>
        <div class="form-group">
            <label for="inputCatergory">Category</label>
            <input type="text" value="{{movie.category}}" name="category" class="form-control" id="inputCatergory" placeholder="e.g Action">
        </div>
        <div class="form-group">
            <label for="inputReleased">Released Date</label>
            <input type="text" value="{{movie.released}}" name="released" class="form-control" id="datetimepicker1">
        </div>
        </div>
        <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </form>
</div>